@functions
{
string GetCurrentTime()
{
    return DateTime.Now.ToLongTimeString();
}
}

@{
    var parms = new Dictionary<string, string>
    {
        { "str", "Current time: "},
        {"date", GetCurrentTime()}
    };
}

<hr />
<footer>
    <cache expires-after="@TimeSpan.FromMinutes(1)" vary-by-user="true">@GetCurrentTime() (Sorry for caching..)</cache>
    <environment include="development">
        <a asp-route="Params" asp-all-route-data="parms">What's a time?</a>
    </environment>
